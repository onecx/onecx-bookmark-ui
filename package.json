    "@angular-eslint/eslint-plugin-template": "~18.3.0",
    "@angular-eslint/template-parser": "~18.3.0",
    "@angular/cli": "~18.2.6",
    "@angular/compiler-cli": "^18.2.6",
    "@angular/language-service": "^18.2.6",
    "@nx/angular": "19.7.0",
    "@nx/eslint": "19.7.0",
    "@nx/eslint-plugin": "20.0.8",
    "@nx/jest": "19.7.0",
