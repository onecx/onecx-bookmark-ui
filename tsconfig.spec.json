{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "declaration": false,
    "outDir": "./dist/test",
    "module": "commonjs",
    "types": ["jest", "node"],
    "target": "ES2022",
    "useDefineForClassFields": false
  },
  "files": ["src/test-setup.ts"],
  "exclude": ["src/app/shared/generated/**/*", "node_modules"],
  "include": ["jest.config.ts", "src/**/*.test.ts", "src/**/*.spec.ts", "src/**/*.d.ts"]
}
